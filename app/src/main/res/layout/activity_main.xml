<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/SceneTransitionBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SceneTransitionBasic" />

    <Button
        android:id="@+id/BasicTransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BasicTransition" />

    <Button
        android:id="@+id/CustomTransition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CustomTransition" />

    <Button
        android:id="@+id/DrawableAnimations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DrawableAnimations" />

    <Button
        android:id="@+id/GridToPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GridToPager" />

    <Button
        android:id="@+id/Interpolator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interpolator" />

    <Button
        android:id="@+id/Motion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Motion" />

    <Button
        android:id="@+id/OurStreets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OurStreets" />

    <Button
        android:id="@+id/RevealEffectBasic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RevealEffectBasic" />

    <Button
        android:id="@+id/Unsplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unsplash" />

</LinearLayout>